{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    /* strictness */
    "strict": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "verbatimModuleSyntax": true,
    /* path aliases */
    "baseUrl": "src",
    "paths": {
      "$src/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src"
  ]
}