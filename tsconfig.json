{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "$src/*": [
        "./*"
      ],
      "$types/*": [
        "./types/*"
      ]
    },
    // strictness
    "strict": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src"
  ]
}