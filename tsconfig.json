{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "Node16",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // strictness
    "strict": true,
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src"
  ]
}