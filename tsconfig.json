{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "ambient.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "dist",
    "test"
  ]
}